<%= javascript_tag do %>
	$(document).ready(function() {
	  $("#checkout_form_delivery").validate();	
	  $("input[name='order[shipping_method_id]']").rules("add", {
			required: true,
			messages: {
				required: "Please select a shipping method."
			}
		});
		
		if ($("input[name='order[shipping_method_id]']").size() == 1) {
			$("input[name='order[shipping_method_id]']").attr('checked', 'checked');
		}
	});
<% end %>