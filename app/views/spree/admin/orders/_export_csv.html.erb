<% 
	query = request.GET
	query[:search][:created_at_greater_than] = params[:search][:created_at_greater_than].iso8601[0..9] if params[:search][:created_at_greater_than]
	query[:search][:created_at_greater_than] =  params[:search][:completed_at_greater_than].iso8601[0..9] if params[:search][:completed_at_greater_than]
	query[:search][:created_at_less_than] = params[:search][:created_at_less_than].iso8601[0..9] if params[:search][:created_at_less_than]
	query[:search][:created_at_less_than] = params[:search][:completed_at_less_than].iso8601[0..9] if params[:search][:completed_at_less_than]
%>
<%= link_to 'Export as CSV', '/admin/orders.csv?' + query.to_query %>

