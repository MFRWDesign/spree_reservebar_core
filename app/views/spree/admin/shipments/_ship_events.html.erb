<% if @shipment.shipment_detail && @shipment.shipment_detail.ship_events %>
	<table class="index" style="width:100%;" data-hook="admin_shipment_ship_events">
		<tr>
			<th>Event</th>
			<th>Location</th>
			<th>Timestamp</th>
		</tr>
	<% if @shipment.shipment_detail.ship_events.respond_to?(:each) %>
	 <%   @shipment.shipment_detail.ship_events.each do |event| %>
			<tr>
				<td><%= event.name %></td>
				<td><%= event.location %></td>
				<td><%= event.time %></td>
			</tr>
	<% end %>
	<% else %> 
		<tr>
			<td><%= @shipment.shipment_detail.ship_events.name %></td>
			<td><%= @shipment.shipment_detail.ship_events.location %></td>
			<td><%= @shipment.shipment_detail.ship_events.time %></td>
		</tr>
	
	<% end %>
	</table>
<% end %>
