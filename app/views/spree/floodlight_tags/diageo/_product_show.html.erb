<% if controller.controller_name == "products" && controller.action_name == "show" %>
  <% if @product.brand.brand_owner.title == "Diageo" %>

    <% 
      product_name = @product.name.gsub(' ','+').gsub("'","")
      brand_name = @product.brand.title.gsub(' ','+').gsub("'","")
    %>
    <%= "<!--
    Start of DoubleClick Floodlight Tag: Please do not remove
    Activity name of this tag: Product Page_Standard
    URL of the webpage where the tag is expected to be placed: http://reservebar.com
    This tag must be placed between the <body> and </body> tags, as close as possible to the opening tag.
    Creation Date: 03/21/2013
    -->".html_safe %>    
    <script type="text/javascript">
      var axel = Math.random() + "";
      var a = axel * 10000000000000;
      document.write('<iframe src="https://2993648.fls.doubleclick.net/activityi;src=2993648;type=rsrvbar;cat=prod;u4=<%= @product.master.sku -%>;u2=<%= product_name -%>;u3=<%= brand_name -%>;ord=' + a + '?" width="1" height="1" frameborder="0" style="display:none"></iframe>');
    </script>
