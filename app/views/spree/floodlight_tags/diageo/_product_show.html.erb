      <iframe src="https://2993648.fls.doubleclick.net/activityi;src=2993648;type=rsrvbar;cat=prod;u4=<%= @product.master.sku -%>;u2=<%= product_name -%>;u3=<%= brand_name -%>;ord=1?" width="1" height="1" frameborder="0" style="display:none"></iframe>
    </noscript>
    <%= "<!-- End of DoubleClick Floodlight Tag: Please do not remove -->".html_safe %>

    <script type="text/javascript">
      $("#add-to-cart-button").on("click", function() {
      $(document).trigger("itemAddedToCart", ["<%= @product.master.sku -%>", "<%= @product.name -%>", "<%= @product.brand.title -%>"]);
      });
    </script>
  <% end %>
<% end %>
